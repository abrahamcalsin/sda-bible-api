{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "outDir": "./dist",
    "removeComments": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/database/*": ["./database/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
